<div class="page-header">
  <h1 class="text-center">Blocipedia: Wikis-Show</h1>
</div>

<%= render partial: 'upgrade', locals: { user: current_user } %>

<div class="panel panel-default">
  <div class="panel-heading"><%= @wiki.title %></div>
  <div class="panel-body">
    <%= @wiki.body %><br />
  </div>
  <div class="panel-footer">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn btn-success" %>
    <%= link_to "Delete", @wiki, method: :delete, class: "btn btn-danger" %>
    <span class="pull-right"><small>by <%= @wiki.user.name %></small></span>
  </div>
</div>
