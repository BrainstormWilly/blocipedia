<div class="page-header">
  <h1 class="text-center">Blocipedia: <%= @user.name %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-2"><h4>Name:</h4></div>
      <div class="col-md-5"><h4><%= current_user.name %></h4></div>
    </div>
    <div class="row">
      <div class="col-md-2"><h4>Email:</h4></div>
      <div class="col-md-2"><h4><%= current_user.email %></h4></div>
    </div>
    <div class="row">
      <div class="col-md-2"><h4>Account Type:</h4></div>
      <div class="col-md-5"><h4><%= current_user.role %></h4></div>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to "Edit", edit_user_path(@user), class: "btn btn-success" %>
    <% if @user.member? %>
      <%= link_to "Upgrade to Premium", new_charge_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
