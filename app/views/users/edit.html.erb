<div class="page-header">
  <h1 class="text-center">Blocipedia: <%= @user.name %>-Edit</h1>
</div>

<div class="row">
  <div class="col-md-8">
    <%= form_for @user do |f| %>

      <%= form_group_tag([]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      <% end %>

      <%= form_group_tag([]) do %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control'%>
      <% end %>

      <% if @user.premium? %>
        <%= form_group_tag([]) do %>
          <%= f.label :role %><br />
          <%= f.label :role, :member %>
          <%= f.radio_button :role, :member %> |
          <%= f.label :role, :premium %>
          <%= f.radio_button :role, :premium, :checked => true %>
        <% end %>
      <% end %>

      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
